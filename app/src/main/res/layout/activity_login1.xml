<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-44dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="161dp"
                app:srcCompat="@drawable/ava" />

            <TextView
                android:id="@+id/inicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="Inicio de sesion"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#121111"
                android:textSize="30dp"
                android:textStyle="bold" />


            <Space
                android:layout_width="408dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/inicio2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="Correo"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#121111"
                android:textSize="30dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ema"
                android:ems="10"
                android:hint="Escriba su nombre de usuario o e-mail"
                android:inputType="textPersonName" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/inicio3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="Contraseña"
                android:textAlignment="center"
                android:textColor="#121111"
                android:textSize="30dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/contra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/contra"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPersonName" />

            <Space
                android:layout_width="408dp"
                android:layout_height="25dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/iniciosesion"
                android:layout_width="214dp"
                android:layout_height="40dp"

                android:layout_gravity="center"
                android:background="@drawable/boton"
                android:text="Ingresar" />

            <Space
                android:layout_width="408dp"
                android:layout_height="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/Crearc1"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:text="¿No Tienes Cuenta?"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/Crearc"
                android:layout_width="230dp"
                android:layout_height="37dp"
                android:clickable="true"
                android:text="Registrate"
                android:textAlignment="textEnd"
                android:textColor="@color/design_default_color_error"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>