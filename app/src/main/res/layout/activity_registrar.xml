<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registrar"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/linea">


    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <TextView
    android:id="@+id/resgit1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="cursive"
    android:text="REGISTRAR USUARIOS"
    android:textAlignment="center"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
    android:textColor="#121111"
    android:textSize="30dp"
    android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"  />


    <EditText
        android:id="@+id/nombreco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/pro"
        android:ems="10"
        android:hint="Nombre Completo"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"  />



    <EditText
        android:id="@+id/coreeo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/mail"
        android:ems="10"
        android:hint="Escriba su e-mail"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"  />


    <EditText
        android:id="@+id/contra1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/cod"
        android:ems="10"
        android:hint="Escriba su contraseÃ±a"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"  />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/crear"
            android:layout_width="214dp"
            android:layout_height="40dp"

            android:layout_gravity="center"
            android:background="@drawable/boton"
            android:text="Crear Usuario" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




</androidx.appcompat.widget.LinearLayoutCompat>