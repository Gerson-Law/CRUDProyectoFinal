<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registrar"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
    android:id="@+id/resgit1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="cursive"
    android:text="Registrar Usuario"
    android:textAlignment="center"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
    android:textColor="#121111"
    android:textSize="30dp"
    android:textStyle="bold" />

    <EditText
        android:id="@+id/nombreco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/pro"
        android:ems="10"
        android:hint="Nombre Completo"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/coreeo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/mail"
        android:ems="10"
        android:hint="Escriba su e-mail"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/contra1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/cod"
        android:ems="10"
        android:hint="Escriba su contraseÃ±a"
        android:inputType="textPersonName" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/crear"
        android:layout_width="214dp"
        android:layout_height="40dp"

        android:layout_gravity="center"
        android:background="@drawable/boton"
        android:text="Crear Usuario" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.appcompat.widget.LinearLayoutCompat>