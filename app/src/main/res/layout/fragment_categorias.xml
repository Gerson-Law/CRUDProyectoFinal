<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vv"
    tools:context=".ui.Categorias">

    <TextView
        android:id="@+id/inicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="CATEGORIA"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_idcategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColorHint="@color/black">



        <EditText
            android:id="@+id/et_idcategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@color/celeste"
            android:drawableStart="@drawable/id"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="ID Categorias:"
            android:inputType="number"
            android:paddingLeft="1dp"
            android:textColor="@color/teal_700"
            android:textSize="14dp" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_namecategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColorHint="@color/black">

        <EditText
            android:id="@+id/et_namecategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:drawableStart="@drawable/name"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Nombre de Categoria:"
            android:inputType="text"
            android:paddingLeft="1dp"
            android:background="@color/celeste"
            android:textColor="#03168B"
            android:textSize="14dp" />

    </com.google.android.material.textfield.TextInputLayout>


    <!-- android:entries="@array/estadoCategorias"-->

    <Spinner
        android:id="@+id/sp_estado"
        style="@style/Widget.AppCompat.DropDownItem.Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/estilospinner"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:popupBackground="@color/celeste"
        android:spinnerMode="dropdown"
        android:textColorHint="@color/blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="300dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">



        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSave"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="listar categoria"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:background="@drawable/boton"
            android:shadowColor="#000000"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNew"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="listar categoria"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:background="@drawable/boton"
            android:shadowColor="#000000">

        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>

</FrameLayout>







